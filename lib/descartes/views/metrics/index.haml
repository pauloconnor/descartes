.header
  %h1 Metrics
.well
  .col-md-3.metrics-cache-status
    %input{ :class => "metrics-cache-status", :type => "text", :disabled => true, :placeholder => "Cache last updated at " + cache_age }
  .col-md-3.col-md-offset-4
    = haml :"common/_interval"
  .col-md-3.col-md-offset-5.tools.btn-group
    %button{ :type => "button", :class => "tools btn btn-default reset", :title => "reset view" }
      %span.glyphicon.glyphicon-fire
    %button{ :type => "button", :class => "tools btn btn-default refresh", :title => "refresh metrics" }
      %span.glyphicon.glyphicon-refresh
    %button{ :type => "button", :class => "tools btn btn-default nightmode", :title => "nightmode" }
      %span.glyphicon.glyphicon-eye-close

.accordion-group
  / Form for adding metrics to an existing (or new) graph
  %fieldset#metrics_graph_form{ :class => "collapse in" }
    #metrics_graph_select
      %ul
        //%li
        //  %select{ :class => "col-md-3", :id => "metrics_graph_select", :name => "metrics_graph_select" }
        //    %option{ :value => "_new" } New Graph
        %li
          %label{ :for => "new-graph-name" }
          %spannput{ :class => "new-graph-name col-md-3", :type => "text", :disabled => true, :placeholder => "New graph name" }
        %li
          %button{ :class => "metrics_graph_submit btn btn-primary disabled" } Save Graph
      %ul.search-ahead
        %li
          %label{ :for => "search-ahead" } Filter metrics:
          %spannput{ :class => "search-ahead col-md-4", :type => "text", :placeholder => "Enter search term" }
    %span.graph#metrics_graph_preview.col-md-7
.metrics
.loading.hidden
  %span
    Loading
%script{ :type => "text/javascript", :src => "/js/list-metrics.js" }
%script{ :type => "text/javascript", :src => "/js/render-common.js" }
